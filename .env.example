# ENV File for API with Docker Configuration
APP_NAME=Laravel-API
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost:8000
APP_VERSION=1.0.0

# API configuration
API_PORT=8000
API_PREFIX=api
API_THROTTLE=60,1
API_DOCUMENTATION=true

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# Performance
APP_MAINTENANCE_DRIVER=file
PHP_CLI_SERVER_WORKERS=4
BCRYPT_ROUNDS=12

# Logging
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database - MySQL Docker Configuration
DB_CONNECTION=mysql
DB_HOST=db-estech
DB_PORT=3306
DB_DATABASE=laravel
DB_USERNAME=laravel
DB_PASSWORD=laravel
DB_ROOT_PASSWORD=root

# API Typically uses tokens instead of sessions
SESSION_DRIVER=array
SESSION_LIFETIME=120
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_SECURE_COOKIE=false

# API Storage and Queue
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

# Cache Configuration for API
CACHE_STORE=file
CACHE_PREFIX=api_
CACHE_TTL=3600

# Redis Configuration (Uncomment to use)
# REDIS_CLIENT=phpredis
# REDIS_HOST=redis-estech
# REDIS_PASSWORD=null
# REDIS_PORT=6379

# Mail Configuration
MAIL_MAILER=log
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="api@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Storage Configuration
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# CORS Settings for API
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOWED_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization

# JWT Settings for API Authentication (if using)
JWT_SECRET=
JWT_TTL=60

# Docker Resource Limits
DOCKER_PHP_CPU_LIMIT=0.5
DOCKER_PHP_MEMORY_LIMIT=512M
DOCKER_NGINX_CPU_LIMIT=0.3
DOCKER_NGINX_MEMORY_LIMIT=128M
DOCKER_MYSQL_CPU_LIMIT=1.0
DOCKER_MYSQL_MEMORY_LIMIT=1G
